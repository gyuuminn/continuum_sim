<mujoco model="Cable">
    <include file="scene.xml"/> <!-- 배경, 바닥 등 추가 가능 -->

    <extension>
        <plugin plugin="mujoco.elasticity.cable"/>
    </extension>

    <statistic center="0 0 .3" extent="1"/>
    <visual>
        <global elevation="-30"/>
    </visual>

    <compiler autolimits="true"/>

    <size memory="128M"/>


    <worldbody>
        <composite type="cable" curve="s" count="70 1 1" size="1" offset="-.3 0 .6" quat="0.707 0 0.707 0" initial="none">
        <plugin plugin="mujoco.elasticity.cable">
            <!--Units are in Pa (SI)-->
            <config key="twist" value="5e7"/>
            <config key="bend" value="2e7"/>
            <config key="vmax" value="0.05"/>
        </plugin>
        <joint kind="main" damping=".03" frictionloss="0.0"/>
        <geom type="capsule" size=".005" density="8000" condim="3" friction="0.5 0.005 0.0001" rgba=".8 .2 .1 1" />
        </composite>
        <body name="slider" pos=".7 0 .6">
            <joint type="slide" axis="0 1 0" damping=".1"/>
            <geom size=".01"/>
        </body>
    </worldbody>
    <equality>
        <connect name="right_boundary" body1="B_last" body2="slider" anchor=".025 0 0"/>
    </equality>
    <contact>
        <exclude body1="B_last" body2="slider"/>
    </contact>
    <actuator>
        <motor site="S_last" gear="0 0 0 1 0 0" ctrlrange="-.03 .03"/>
    </actuator>
    <sensor>
        <!-- IMU 측정치 -->
        <accelerometer site="S_last" name="imu_acc"/>
        <gyro          site="S_last" name="imu_gyro"/>

        <!-- ‘정답’ 포즈(프레임 기반 센서: objtype/objname 사용) -->
        <framepos  objtype="site" objname="S_last" name="imu_pos"/>
        <framequat objtype="site" objname="S_last" name="imu_quat"/>
    </sensor>
</mujoco>

