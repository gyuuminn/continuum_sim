                        <body name="seg1_v9" pos="0 0 0.0075">
                          <geom name="seg1_v9_geom" fromto="0 0 0  0 0 0.0075" rgba="0.75 0.15 0.60 1"/>

                          <body name="seg1_v10" pos="0 0 0.0075">
                            <geom name="seg1_v10_geom" fromto="0 0 0  0 0 0.0075" rgba="0.35 0.35 0.35 1"/>
                          </body>

                        </body>
                      </body>
                    </body>
                  </body>
                </body>
              </body>
            </body>
          </body>
        </body>
      </body>
    </body>
  </worldbody>

  <actuator>
    <position name="u_seg1_j1" joint="seg1_j1_yaw" kp="200" ctrlrange="-3.5 3.5"/>
    <position name="u_seg1_j2" joint="seg1_j2_pitch" kp="200" ctrlrange="-3.5 3.5"/>
  </actuator>
</mujoco>